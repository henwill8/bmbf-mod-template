{
    "id": "{% mod.id %}",
    "name": "{% mod.name %}",
    "author": "{% mod.author %}",
    "description": [
        "{% for l in mod.description %}"
    ],
    "category": "{% mod.category %}",
    "gameVersion": "1.3.0p2",
    "version": "0.1.0",
    "links": {
        "project-home": "{% mod.url %}"
    },
    "platform": "Quest",
    "components": [{
            "Type": "HookMod",
            "InstallAction": {
                "InstallLibraryFile": "lib{{ mod.out }}.so"
            },
            "UninstallAction": {
                "RemoveLibraryFile": "lib{{ mod.out }}.so"
            }
        }
    ]
}